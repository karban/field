body, h1, h2, h3, h4, h5, table {
	font-family: {{FONTFAMILY}}, sans-serif;
	font-size: {{FONTSIZE}}pt;
	color: rgb(50, 50, 50);
}

body {
	/* background: url(/home/karban/Projects/agros2d-coupling/resources/templates/panels/background.png) no-repeat bottom left 100%; */
	background: rgba(206, 206, 206);
	padding-top: 6pt;
	margin-top: 5pt;
}

h1 {
	font-size: 130%;
	padding: 2px;
    color: rgb(41, 41, 140);
}

h2 {
	font-size: 120%;
	padding-top: 5pt;
	padding-left: 10pt;
	margin-top: 2pt;	
	margin-bottom: 2pt;	
    color: rgb(41, 41, 140);
}

h3 {
	font-size: 105%;
	margin-top: 2pt;	
	margin-bottom: 2pt;	
    color: rgb(41, 41, 140);
}

table {
	width: 100%;	
	padding-bottom: 10pt;
	padding-top: 1pt;
}

td {
	padding-left: 10pt;
	padding-right: 10pt;
	width: 50%;
}

tr {
	vertical-align: top;
}

.figure { 
  text-align: left; 
}

.section {
	background: rgba(206, 206, 206, 0.6);
    border-radius: 6px;
	margin-bottom: 20pt;
	width: 100%;
}

.subsection {
	padding: 1pt 0pt 1pt 4pt;
	margin: 0;
}

.cleaner { 
  clear: both; 
}
